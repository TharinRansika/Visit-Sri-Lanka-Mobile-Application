<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTouristAccountFragment"
    android:fillViewport="true"
    android:background="@drawable/sri_lanka_background_image_01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/mrtSubMainBackgroundColor"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/mrtFontColor"
                    android:text="Edit Tourist Profile"
                    android:textSize="32sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/touristEmail"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mrtInputFieldColor"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:enabled="false"
                    android:saveEnabled="true"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:text="tharinransika128@gmail.com"
                    />

                <EditText
                    android:id="@+id/editTouristName"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Tharin Ransika"
                    android:drawableLeft="@drawable/baseline_account_circle_24"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="10dp"
                    />


                <EditText
                    android:id="@+id/editTouristContactNumber"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="07117567840"
                    android:drawableLeft="@drawable/baseline_contact_phone_24"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/editTouristCountry"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Italy"
                    android:drawableLeft="@drawable/baseline_local_airport_24"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/editProfilePictureImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/baseline_account_box_24"/>

                <Button
                    android:id="@+id/editProfilePictureButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/catUploadProfilePictureButton"
                    android:background="@color/purple_200"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    />

                <Button
                    android:id="@+id/editAccountButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mrtFontColor"
                    android:background="@drawable/create_account_as_tourist_activity_create_account_button"
                    android:text="Edit Profile"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp"
                    android:padding="20dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>