<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TouristAccountFragment"
    android:background="@drawable/sri_lanka_background_image_01"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/mrtSubMainBackgroundColor"
                android:padding="16dp">

                <TextView
                    android:id="@+id/touristAccountHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/mrtFontColor"
                    android:textSize="64sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/touristProfilePicture"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/baseline_account_box_24"
                    />

                <TextView
                    android:id="@+id/touristNameInProfile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/mrtFontColor"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_account_circle_24"
                    />

                <TextView
                    android:id="@+id/touristEmailInProfile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/mrtFontColor"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_email_24"
                    />


                <TextView
                    android:id="@+id/touristCountryInProfile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/mrtFontColor"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_local_airport_24"
                    />

                <TextView
                    android:id="@+id/touristContactNumberInProfile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/mrtFontColor"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_contact_phone_24"

                    />

                <Button
                    android:id="@+id/shareYourExperiencesButton"
                    android:layout_width="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mrtFontColor"
                    android:text="@string/mtaShareYourExperiences"
                    android:background="@drawable/create_account_as_tourist_activity_create_account_button"
                    android:padding="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:layout_marginBottom="40dp"
                    >

                    <Button
                        android:id="@+id/editProfileButton"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mrtFontColor"
                        android:text="@string/mtaEditProfileButton"
                        android:background="@drawable/my_tourist_account_button"
                        android:padding="15dp"
                        />


                    <Button
                        android:id="@+id/moveToDeleteFragmentButton"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mrtFontColor"
                        android:background="@drawable/my_tourist_account_button"
                        android:text="Delete Profile"
                        android:padding="15dp"
                        android:layout_marginLeft="40dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>