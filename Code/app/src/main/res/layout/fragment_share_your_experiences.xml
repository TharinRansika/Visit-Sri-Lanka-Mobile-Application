<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareYourExperiencesFragment"
    android:fillViewport="true"
    android:background="@drawable/sri_lanka_background_image_01"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/mrtSubMainBackgroundColor"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/mrtFontColor"
                    android:text="@string/syeHeading"
                    android:textSize="32sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/nameOfThePlace"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/syeNameField"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/mrtFontColor"
                    />

                <EditText
                    android:id="@+id/localtion"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/syeLocationField"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/mrtFontColor"
                    />


                <EditText
                    android:id="@+id/experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/syeExperienceField"
                    android:background="@color/mrtInputFieldColor"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:lines="10"
                    android:textColor="@color/mrtFontColor"
                    />

                <ImageView
                    android:id="@+id/experiencesUploadsImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/baseline_upload_file_24"/>

                <Button
                    android:id="@+id/uploadSomePicturesButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/syeUploadSomeImagesButton"
                    android:background="@color/purple_200"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    />


                <Button
                    android:id="@+id/shareExperienceButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mrtFontColor"
                    android:background="@drawable/create_account_as_tourist_activity_create_account_button"
                    android:text="@string/syeShareButton"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp"
                    android:padding="20dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</ScrollView>