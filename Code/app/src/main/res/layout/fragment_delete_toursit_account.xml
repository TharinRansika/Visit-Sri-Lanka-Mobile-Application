<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteToursitAccountFragment"
    android:background="@drawable/sri_lanka_background_image_01"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/mrtSubMainBackgroundColor"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/mrtFontColor"
                android:text="Are you sure about account deletion?"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/touristEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email Address"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress"/>



            <Button
                android:id="@+id/confirmButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="@color/mrtFontColor"
                android:background="@drawable/create_account_as_tourist_activity_create_account_button"
                android:text="Confirm Deletion"
                android:elevation="5dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/deleteAccountButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/delete_account_button_before"
                android:text="Delete Account"
                android:elevation="5dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textSize="15sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>