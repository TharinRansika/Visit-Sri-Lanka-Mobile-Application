<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">

            <TextView
                android:id="@+id/touristName_placeName_location_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M.R. Tharin Ransika \n @ Sri Dalada Maligawa, Kandy."
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/postedDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:textSize="15sp"
                android:textColor="#d279a6" />
            <TextView
                android:id="@+id/postedTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="Time"
                android:textColor="#d279a6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/experiencePhotoImageView"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:src="@drawable/baseline_image_24"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Last monday we want to visit Sri Dalada Maligawa. We left from our residence at 2.30 AM. Actually it was best ever trip I had"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>